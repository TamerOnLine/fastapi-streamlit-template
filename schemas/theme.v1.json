{
  "$id": "https://local.schemas/theme.v1.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume Theme v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "page", "palette", "fonts", "layout"],
  "properties": {
    "$schema": { "type": "string" },
    "name": { "type": "string", "minLength": 1 },
    "page": {
      "type": "object",
      "additionalProperties": false,
      "required": ["size", "margins_mm"],
      "properties": {
        "size": { "type": "string", "enum": ["A4", "Letter"] },
        "margins_mm": {
          "type": "object",
          "additionalProperties": false,
          "required": ["top", "right", "bottom", "left"],
          "properties": {
            "top": { "type": "number" },
            "right": { "type": "number" },
            "bottom": { "type": "number" },
            "left": { "type": "number" }
          }
        }
      }
    },
    "palette": {
      "type": "object",
      "additionalProperties": false,
      "required": ["primary", "text", "muted", "bg"],
      "properties": {
        "primary": { "type": "string" },
        "text":    { "type": "string" },
        "muted":   { "type": "string" },
        "bg":      { "type": "string" }
      }
    },
    "fonts": {
      "type": "object",
      "additionalProperties": false,
      "required": ["arabic", "latin"],
      "properties": {
        "arabic": { "type": "string" },
        "latin":  { "type": "string" }
      }
    },
    "layout": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["block_id"],
        "properties": {
          "block_id": {
            "type": "string",
            "enum": [
              "header_name","contact_info","key_skills","languages",
              "text_section","projects","education","social_links",
              "avatar_circle","decor_curve","left_panel_bg"
            ]
          }
        }
      }
    },
    "frames": { "type": "object" }
  }
}
